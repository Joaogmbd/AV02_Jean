#!/bin/bash
DIA=$(date | cut -d " " -f 1)
case "$DIA" in
	Mon)
		printf "Hoje é sexta-feira!\n"
		;;
	Tue)
		printf "Hoje é terça-feira!\n"
		;;
	Wed)
		printf "Hoje é quarta-feira!\n"
		;;
	Thu)
		printf "Hoje é quinta-feira!\n"
		;;
	Fri)
		printf "Hoje é sexta-feira!\n"
		;;
	Sat)
		printf "Hoje é sábado!\n"
		;;
	Sun)
		printf "Hoje é domingo!\n"
		;;
	*)
		printf "Hoje não é um dia da semana??? o.O\n"
esac	
	
		

